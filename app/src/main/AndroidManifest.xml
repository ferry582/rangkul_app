<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rangkul"
        tools:targetApi="tiramisu">
        <activity
            android:name=".ui.profile.VisitedProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.search.CategoryContentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.comment.CommentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.createpost.CreatePostActivity"
            android:exported="false"
            android:parentActivityName=".ui.createpost.SelectCategoryActivity" />
        <activity
            android:name=".ui.createpost.SelectCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.authentication.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".ui.authentication.LoginWithEmailActivity" />
        <activity
            android:name=".ui.authentication.LoginWithEmailActivity"
            android:exported="false"
            android:parentActivityName=".ui.authentication.LoginOptionsActivity" />
        <activity
            android:name=".ui.authentication.SignupWithEmailActivity"
            android:exported="false"
            android:parentActivityName=".ui.authentication.SignupOptionsActivity" />
        <activity
            android:name=".ui.authentication.SignupOptionsActivity"
            android:exported="false"
            android:parentActivityName=".ui.authentication.AuthenticationActivity" />
        <activity
            android:name=".ui.authentication.LoginOptionsActivity"
            android:exported="false"
            android:parentActivityName=".ui.authentication.AuthenticationActivity" />
        <activity
            android:name=".ui.authentication.AuthenticationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>