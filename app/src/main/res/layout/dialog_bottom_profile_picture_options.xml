<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetPostOptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/safe_margin"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPullIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pull_bottom_dialog" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNewProfilePhoto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="New Profile Photo"
        android:textColor="@color/textBlack"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_new_photo_profile"
        android:gravity="center_vertical"
        android:drawablePadding="15dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPullIcon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeletePhoto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="15dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="Delete Photo"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNewProfilePhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>